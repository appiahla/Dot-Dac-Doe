<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.dot_dac_doe.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/player1name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gloria_hallelujah"
                android:gravity="center"
                android:text="Player 1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/player1_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="-25dp"
                app:srcCompat="@drawable/user_circle" />

            <TextView
                android:id="@+id/player1points2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:fontFamily="@font/gloria_hallelujah"
                android:gravity="center"
                android:text="Boxes: 0"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/playerNowPointer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/a1"
            android:translationY="80dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/player2name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gloria_hallelujah"
                android:gravity="center"
                android:text="Computer"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"  />

            <ImageView
                android:id="@+id/computer_circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="-25dp"
                app:srcCompat="@drawable/user_circle" />

            <TextView
                android:id="@+id/computer_points2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:fontFamily="@font/gloria_hallelujah"
                android:gravity="center"
                android:text="Boxes: 0"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"  />
        </RelativeLayout>
    </LinearLayout>

    <com.example.dot_dac_doe.view.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:layout_weight="1"  />

    <ImageView
        android:id="@+id/singleplayer_pause2"
        android:layout_width="63dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/pause_btn" />

</LinearLayout>