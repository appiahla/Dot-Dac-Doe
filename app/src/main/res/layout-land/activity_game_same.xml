<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/playerNowPointer2"
        android:layout_width="78dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:src="@drawable/a1"
        android:translationY="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-31dp" />

    <TextView
        android:id="@+id/player1name2"
        android:layout_width="148dp"
        android:layout_height="34dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Player 1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/player1_circle2"
        android:layout_width="134dp"
        android:layout_height="120dp"
        android:translationY="-25dp"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="61dp" />

    <TextView
        android:id="@+id/player1points2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/player2name2"
        android:layout_width="174dp"
        android:layout_height="38dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Computer"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="717dp" />

    <ImageView
        android:id="@+id/computer_circle2"
        android:layout_width="126dp"
        android:layout_height="120dp"
        android:translationY="-25dp"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteX="765dp"
        tools:layout_editor_absoluteY="58dp" />

    <TextView
        android:id="@+id/player2_points2"
        android:layout_width="184dp"
        android:layout_height="38dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="717dp"
        tools:layout_editor_absoluteY="156dp" />

    <ImageView
        android:id="@+id/singleplayer_pause2"
        android:layout_width="63dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/pause_btn"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="356dp" />

    <com.example.dot_dac_doe.view.GameView
        android:id="@+id/gameView"
        android:layout_width="554dp"
        android:layout_height="234dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="133dp" />
</androidx.constraintlayout.widget.ConstraintLayout>