<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.dot_dac_doe.GameActivitySame">

    <ImageView
        android:id="@+id/playerNowPointer2"
        android:layout_width="78dp"
        android:layout_height="67dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:rotation="90"
        android:src="@drawable/a1"
        android:translationY="80dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="747dp" />

    <ImageView
        android:id="@+id/playerNowPointer2.1"
        android:layout_width="78dp"
        android:layout_height="67dp"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:rotation="90"
        android:src="@drawable/a1"
        android:translationY="80dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />

    <TextView
        android:id="@+id/player1name2"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Player 1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player1_circle2"
        android:layout_width="128dp"
        android:layout_height="164dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:translationY="-25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_circle" />

    <TextView
        android:id="@+id/player1points2"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="169dp" />

    <TextView
        android:id="@+id/player2name2"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Computer"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/computer_circle2"
        android:layout_width="128dp"
        android:layout_height="164dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="2dp"
        android:translationY="-25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_circle" />

    <TextView
        android:id="@+id/player2points2"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="171dp" />

    <ImageView
        android:id="@+id/singleplayer_pause2"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pause_btn" />

    <com.example.dot_dac_doe.view.GameView
        android:id="@+id/gameView2"
        android:layout_width="465dp"
        android:layout_height="380dp"
        android:layout_marginEnd="204dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58" />
</androidx.constraintlayout.widget.ConstraintLayout>