<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B36161"
    >

    <ImageView
        android:id="@+id/horizontal_sticky_note"
        android:layout_width="481dp"
        android:layout_height="315dp"
        android:layout_marginStart="194dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/landscape_pause_background" />

    <Button
        android:id="@+id/horizontal_resume"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Resume"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/horizontal_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_pause_title"
        app:rippleColor="#B6B5B5"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/horizontal_exit"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Exit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_pause_title"
        app:rippleColor="#B6B5B5"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/horizontal_howto"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="How to Play"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/horizontal_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_resume"
        app:rippleColor="#B6B5B5"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/horizontal_restart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Restart"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_exit"
        app:rippleColor="#B6B5B5"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/horizontal_pause_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="The game is paused."
        android:textColor="#252525"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/horizontal_sticky_note"
        app:layout_constraintTop_toTopOf="@+id/horizontal_sticky_note" />

</androidx.constraintlayout.widget.ConstraintLayout>