<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.dot_dac_doe.MultiplayerGameOpposite">

    <TextView
        android:id="@+id/player1name_mult3"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Player 1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/player1_circle_mult3"
        android:layout_width="128dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="2dp"
        android:translationY="-25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/player1points_mult3"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="147dp" />

    <ImageView
        android:id="@+id/playerNowPointer_mult3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_weight="1"
        android:src="@drawable/a1"
        android:translationY="80dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="78dp" />

    <com.example.dot_dac_doe.view.GameView
        android:id="@+id/gameView_mult3"
        android:layout_width="465dp"
        android:layout_height="380dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/multiplayer_pause3"
        android:layout_width="63dp"
        android:layout_height="54dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="322dp" />

    <TextView
        android:id="@+id/player2name_mult3"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:rotation="180"
        android:text="Player 2"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/player2_circle_mult3"
        android:layout_width="128dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:translationY="-25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/player2points_mult3"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:rotation="180"
        android:text="Boxes: 0"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="163dp" />

</androidx.constraintlayout.widget.ConstraintLayout><![CDATA[//android:onClick="pauseGame()"
        app:srcCompat="@drawable/pause_btn" />

    ]]>