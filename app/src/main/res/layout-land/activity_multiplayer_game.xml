<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.dot_dac_doe.MultiplayerGame">

    <ImageView
        android:id="@+id/multiplayer_pause2"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:onClick="pauseGame()"
        app:srcCompat="@drawable/pause_btn"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="341dp" />

    <ImageView
        android:id="@+id/playerNowPointer_mult2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/a1"
        android:translationY="80dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="130dp" />

    <com.example.dot_dac_doe.view.GameView
        android:id="@+id/gameView_mult2"
        android:layout_width="563dp"
        android:layout_height="376dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/player1name_mult2"
                android:layout_width="152dp"
                android:layout_height="41dp"
                android:fontFamily="@font/gloria_hallelujah"
                android:gravity="center"
                android:text="Player 1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/player1_circle_mult2"
                android:layout_width="147dp"
                android:layout_height="139dp"
                android:translationY="-25dp"
                app:srcCompat="@drawable/user_circle" />

            <TextView
                android:id="@+id/player1points_mult2"
                android:layout_width="154dp"
                android:layout_height="34dp"
                android:fontFamily="@font/gloria_hallelujah"
                android:gravity="center"
                android:text="Boxes: 0"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/player2name_mult2"
                android:layout_width="177dp"
                android:layout_height="45dp"
                android:fontFamily="@font/gloria_hallelujah"
                android:gravity="center"
                android:text="Player 2"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/computer_circle_mult2"
                android:layout_width="154dp"
                android:layout_height="148dp"
                android:translationY="-25dp"
                app:srcCompat="@drawable/user_circle" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>