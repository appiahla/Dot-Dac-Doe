<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/horizontal_sticky_note2"
        android:layout_width="481dp"
        android:layout_height="315dp"
        android:layout_marginStart="194dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/landscape_pause_background" />

    <Button
        android:id="@+id/horizontal_exit_yes"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Yes"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/horizontal_sticky_note2"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_exit_title"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/horizontal_exit_title"
        android:layout_width="418dp"
        android:layout_height="74dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Are you sure you want to exit?"
        android:textColor="#252525"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/horizontal_sticky_note2"
        app:layout_constraintTop_toTopOf="@+id/horizontal_sticky_note2" />

    <Button
        android:id="@+id/horizontal_exit_no"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="No"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/horizontal_sticky_note2"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_exit_title"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>