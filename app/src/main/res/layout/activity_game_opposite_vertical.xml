    <TextView
        android:id="@+id/player2name4"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:rotation="180"
        android:text="Computer"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player2points4"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:rotation="180"
        android:text="Boxes: 0"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameView4"
        app:layout_constraintVertical_bias="0.00999999" />

    <ImageView
        android:id="@+id/computer_circle4"
        android:layout_width="128dp"
        android:layout_height="164dp"
        android:layout_marginTop="52dp"
        android:rotation="180"
        android:translationY="-25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameView4"
        app:srcCompat="@drawable/user_circle" />

    <com.example.dot_dac_doe.view.GameView
        android:id="@+id/gameView4"
        android:layout_width="380dp"
        android:layout_height="465dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/singleplayer_pause4"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="141dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameView4"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/pause_btn" />

    <ImageView
        android:id="@+id/singleplayer_undo4"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="141dp"
        app:layout_constraintBottom_toTopOf="@+id/gameView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undo_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>