<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/player1name4"
        android:layout_width="166dp"
        android:layout_height="46dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Player 1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/player1_circle4"
        android:layout_width="137dp"
        android:layout_height="156dp"
        android:layout_marginStart="16dp"
        android:translationY="-25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/player1points4"
        android:layout_width="187dp"
        android:layout_height="44dp"
        android:layout_marginEnd="224dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="211dp" />

    <ImageView
        android:id="@+id/playerNowPointer4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/a1"
        android:translationY="80dp"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/playerNowPointer4.1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:rotation="180"
        android:src="@drawable/a1"
        android:translationY="80dp"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="717dp" />

    <TextView
        android:id="@+id/player2name4"
        android:layout_width="170dp"
        android:layout_height="42dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Computer"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="648dp" />

    <ImageView
        android:id="@+id/computer_circle4"
        android:layout_width="137dp"
        android:layout_height="129dp"
        android:translationY="-25dp"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="728dp" />

    <TextView
        android:id="@+id/player2_points4"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="843dp" />

</androidx.constraintlayout.widget.ConstraintLayout>