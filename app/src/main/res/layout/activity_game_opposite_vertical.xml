<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/player1name4"
        android:layout_width="166dp"
        android:layout_height="46dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Player 1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="-8dp" />

    <ImageView
        android:id="@+id/player1_circle4"
        android:layout_width="137dp"
        android:layout_height="156dp"
        android:layout_marginStart="92dp"
        android:translationY="-25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/player1points4"
        android:layout_width="187dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="156dp" />

    <ImageView
        android:id="@+id/playerNowPointer4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/a1"
        android:translationY="80dp"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/playerNowPointer4.1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:rotation="180"
        android:src="@drawable/a1"
        android:translationY="80dp"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="658dp" />

    <TextView
        android:id="@+id/player2name4"
        android:layout_width="170dp"
        android:layout_height="42dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Computer"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="698dp" />

    <ImageView
        android:id="@+id/computer_circle4"
        android:layout_width="116dp"
        android:layout_height="110dp"
        android:translationY="-25dp"
        app:srcCompat="@drawable/user_circle"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="749dp" />

    <TextView
        android:id="@+id/player2_points4"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:gravity="center"
        android:text="Boxes: 0"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="814dp" />

    <com.example.dot_dac_doe.view.GameView
        android:id="@+id/gameView"
        android:layout_width="380dp"
        android:layout_height="465dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="223dp" />

    <ImageView
        android:id="@+id/singleplayer_pause4"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pause_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>