<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <EditText
        android:id="@+id/TitleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/gloria_hallelujah"
        android:inputType="textPersonName"
        android:text="DOT DAC DOE"
        android:textAlignment="center"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="80dp" />

    <ImageView
        android:id="@+id/markerMain"
        android:layout_width="94dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/opening_pen"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="254dp" />

    <ImageView
        android:id="@+id/dotsBox"
        android:layout_width="184dp"
        android:layout_height="191dp"
        app:srcCompat="@drawable/opening_grid2"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="270dp" />

    <Button
        android:id="@+id/singlePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Single Player"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:iconTint="@color/white"
        app:strokeColor="#040404"
        app:strokeWidth="20sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="515dp" />

</androidx.constraintlayout.widget.ConstraintLayout>