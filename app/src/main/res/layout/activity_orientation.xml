<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orientation">

    <ImageView
        android:id="@+id/orientation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_arrow"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/orientation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Orientation"
        android:textColor="@color/black"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/portrait_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Portrait"
        android:textColor="#020202"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/landscape_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Landscape"
        android:textColor="#000000"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="611dp" />
</androidx.constraintlayout.widget.ConstraintLayout>