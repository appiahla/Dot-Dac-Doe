<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorial_page">

    <TextView
        android:id="@+id/tutorial_header_DDD"
        android:layout_width="344dp"
        android:layout_height="96dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="HOW TO PLAY!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/goalofgame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goalofgame"
        android:layout_width="312dp"
        android:layout_height="129dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="The goal of the game is to create a square by joining four dots."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_header_DDD" />

    <ImageView
        android:id="@+id/tutorial_icon"
        android:layout_width="222dp"
        android:layout_height="154dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/firstDirection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalofgame"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/tutorial_header" />

    <TextView
        android:id="@+id/firstDirection"
        android:layout_width="343dp"
        android:layout_height="208dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="The first player draws a line to any dot horizontally or vertically next to it. The next player does the same."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>