<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFFFFFF"
    tools:context=".tutorial_page_part2">

    <TextView
        android:id="@+id/tutorial_header_DDD2"
        android:layout_width="400dp"
        android:layout_height="91dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="HOW TO PLAY!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Player2"
        android:layout_width="400dp"
        android:layout_height="183dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="When a square is made, that player gets points and a bonus turn."
        android:textColor="#0C0C0C"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutorial_header_DDD2" />

    <ImageView
        android:id="@+id/part2_icon"
        android:layout_width="297dp"
        android:layout_height="212dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="61dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player2"
        app:srcCompat="@drawable/part2_squares_icon" />

    <TextView
        android:id="@+id/howtoWinpart2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="You can also win a square by drawing the last line.  When the board is full of squares, the player with the most points wins!"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part2_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>