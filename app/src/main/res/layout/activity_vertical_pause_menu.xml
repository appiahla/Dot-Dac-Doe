<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B36161">


    <ImageView
        android:id="@+id/vertical_sticky_note"
        android:layout_width="378dp"
        android:layout_height="567dp"
        app:srcCompat="@drawable/vertical_pause_background"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/vertical_exit"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Exit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/vertical_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/vertical_resume"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/vertical_howto"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="How to Play"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/vertical_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/vertical_exit"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/vertical_restart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Restart"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/vertical_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/vertical_howto"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/vertical_pause_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="The game is paused."
        android:textColor="#252525"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vertical_sticky_note"
        app:layout_constraintTop_toTopOf="@+id/vertical_sticky_note" />

    <Button
        android:id="@+id/vertical_resume"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Resume"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@+id/vertical_sticky_note"
        app:layout_constraintTop_toBottomOf="@+id/vertical_pause_title"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>