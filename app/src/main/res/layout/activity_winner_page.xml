<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".winner_page">

    <Button
        android:id="@+id/play_again"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="309dp"
        android:layout_height="0dp"
        android:layout_marginBottom="280dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Play Again?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/bottom_confetti"
        android:layout_width="320dp"
        android:layout_height="61dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979"
        app:srcCompat="@drawable/bottom_confetti" />

    <TextView
        android:id="@+id/winner_header"
        android:layout_width="300dp"
        android:layout_height="96dp"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="129dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="WINNER!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/congrats"
        android:layout_width="375dp"
        android:layout_height="128dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"

        android:fontFamily="@font/gloria_hallelujah"
        android:text="Congratulations!"
        android:textAlignment="center"
        android:textColor="#F0000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winner_header"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/home_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="314dp"
        android:layout_height="65dp"
        android:layout_marginBottom="204dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/confetti1"
        android:layout_width="144dp"
        android:layout_height="71dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/winner_icon2" />

    <ImageView
        android:id="@+id/confetti2_removed"
        android:layout_width="375dp"
        android:layout_height="97dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263"
        app:srcCompat="@drawable/confetti2_removebg_preview" />

    <ImageView
        android:id="@+id/confetti_top"
        android:layout_width="362dp"
        android:layout_height="89dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"
        app:srcCompat="@drawable/confetti_top_removebg_preview" />

    <ImageView
        android:id="@+id/right_side_removed"
        android:layout_width="98dp"
        android:layout_height="682dp"
        android:layout_marginStart="312dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.827"
        app:srcCompat="@drawable/right_side_confetti_removebg_preview" />

    <ImageView
        android:id="@+id/left_side_removed"
        android:layout_width="111dp"
        android:layout_height="593dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647"
        app:srcCompat="@drawable/left_side_confetti_removebg_preview" />

    <TextView
        android:id="@+id/winner_name"
        android:layout_width="250dp"
        android:layout_height="117dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Player 1"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/right_side_removed"
        app:layout_constraintHorizontal_bias="0.336"
        app:layout_constraintStart_toEndOf="@+id/left_side_removed"
        app:layout_constraintTop_toBottomOf="@+id/congrats" />


</androidx.constraintlayout.widget.ConstraintLayout>