<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".winner_page">

    <Button
        android:id="@+id/play_again"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="309dp"
        android:layout_height="0dp"
        android:layout_marginBottom="384dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Play Again?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/bottom_confetti"
        android:layout_width="326dp"
        android:layout_height="95dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_confetti"
        tools:layout_editor_absoluteY="746dp" />

    <TextView
        android:id="@+id/winner_header"
        android:layout_width="250dp"
        android:layout_height="96dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="129dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="WINNER!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_who_won"
        android:layout_width="348dp"
        android:layout_height="128dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"

        android:fontFamily="@font/gloria_hallelujah"
        android:text="Congratulations!"
        android:textAlignment="center"
        android:textColor="#F0000000"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winner_header" />

    <ImageView
        android:id="@+id/paint_icon"
        android:layout_width="210dp"
        android:layout_height="185dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="4dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_who_won"
        app:srcCompat="@drawable/winner_paint_icon" />

    <Button
        android:id="@+id/home_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="314dp"
        android:layout_height="65dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/gloria_hallelujah"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/confetti1"
        android:layout_width="260dp"
        android:layout_height="156dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="164dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paint_icon"
        app:srcCompat="@drawable/winner_icon2" />

    <ImageView
        android:id="@+id/confetti2_removed"
        android:layout_width="375dp"
        android:layout_height="97dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/confetti2_removebg_preview" />

    <ImageView
        android:id="@+id/confetti_top"
        android:layout_width="362dp"
        android:layout_height="89dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/confetti_top_removebg_preview" />

    <ImageView
        android:id="@+id/right_side_removed"
        android:layout_width="98dp"
        android:layout_height="682dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right_side_confetti_removebg_preview" />

    <ImageView
        android:id="@+id/left_side_removed"
        android:layout_width="111dp"
        android:layout_height="593dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_side_confetti_removebg_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>